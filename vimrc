
set nocompatible

set hidden

set nowrap 
set tabstop=2
set backspace=indent,eol,start 
set autoindent
set copyindent
set number
set shiftwidth=2 "number of spaces to use for autoindentating
set shiftround
set showmatch
set ignorecase
set hlsearch
set incsearch

set history=1000
set undolevels=1000
set title

set nobackup
set noswapfile

set t_Co=256

set pastetoggle=<F2>

set mouse=a

syntax enable
"set background=light "or light
"colorscheme peachpuff
